{
  "name": "4d-debugger",
  "displayName": "4D-Debugger",
  "license": "4D",
  "publisher": "4D",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/4d/4D-Debugger-VSCode"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebug",
    "onLanguage:4d"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [],
    "breakpoints": [
      {
        "language": "4d"
      }
    ],
    "debuggers": [
      {
        "type": "4d",
        "languages": [
          "4d"
        ],
        "label": "4D Debugger",
        "configurationAttributes": {
          "launch": {
            "required": [
              "method",
              "project",
              "executable"
            ],
            "properties": {
              "method": {
                "type": "string",
                "description": "The 4D Method To launch",
                "default": "${file}"
              },
              "project": {
                "type": "string",
                "description": "Absolute path to a 4D Project",
                "default": "${workspaceFolder}/Project/${workspaceFolderBasename}.4DProject"
              },
              "executable": {
                "type": "string",
                "description": "Absolute path to a 4D Server",
                "default": ""
              },
              "port": {
                "type": "number",
                "description": "Port to connect to the 4D server",
                "default": 19815
              }
            }
          },
          "attach": {
            "required": [
              "port"
            ],
            "properties": {
              "port": {
                "type": "number",
                "description": "Port to connect to the 4D server",
                "default": 19815
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "4d",
            "request": "attach",
            "name": "Attach"
          },
          {
            "type": "4d",
            "request": "launch",
            "name": "Launch",
            "method": "${file}",
            "project": "${workspaceFolder}/Project/${workspaceFolderBasename}.4DProject",
            "executable": ""
          }
        ],
        "configurationSnippets": [
          {
            "label": "4D Debug: Attach",
            "description": "Attach to the server",
            "body": {
              "type": "4d",
              "request": "attach",
              "name": "Attach"
            }
          },
          {
            "label": "4D Debug: Launch",
            "description": "Launch to the server and launch a method",
            "body": {
              "type": "4d",
              "request": "launch",
              "name": "Launch",
              "method": "${file}",
              "project": "${workspaceFolder}/Project/${workspaceFolderBasename}.4DProject",
              "executable": ""
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "check-types": "tsc --noEmit --strict",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4",
    "esbuild": "^0.24",
    "globals": "^15.10.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2"
  }
}
